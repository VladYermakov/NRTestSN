<div class="container">
    <h1>The Home View!</h1>
    <ul>
        <li ng-repeat="article in articles">
          {{article.title}} - {{article.content}} <b>by</b> {{article.user.email}}
        </li>
    </ul>
    <a ng-hide="toShow || !signedIn()" ng-click="toggleShow()">Create Article</a>
    <div ng-show="signedIn() && toShow">
      <form ng-submit="addArticle()">
        <input type="text" placeholder="Title" ng-model="title">
        <input type="text" placeholder="Content" ng-model="content">
        <!--a ng-click="chooseAttachment('File')">Choose File</a-->
        <a ng-repeat="att in attachment_types" ng-click="chooseAttachment(att)">
          Choose {{capitalize(att)}}
        </a>
        <input type="file" ng-model="file" ng-show="showFile"
               name="source" ngf-select>
        <!--input type="text" ng-model="file" ng-show="showFile"-->
        <input type="text" ng-model="article" ng-show="showArticle">
        <input type="text" ng-model="comment" ng-show="showComment">
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
    </div>
</div>
